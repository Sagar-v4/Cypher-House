    <script>
      var header = $("header");
      var range = 200;

      $(window).on("scroll", function () {
        var scrollTop = $(this).scrollTop(),
          height = header.outerHeight(),
          offset = height / 2,
          calc = 1 - (scrollTop - offset + range) / range;

        header.css({ opacity: calc });

        if (calc > "1") {
          header.css({ opacity: 1 });
        } else if (calc < "0") {
          header.css({ opacity: 0 });
        }
      });

    </script>
